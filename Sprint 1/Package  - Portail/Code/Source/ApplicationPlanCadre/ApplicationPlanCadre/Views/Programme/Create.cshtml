@model ApplicationPlanCadre.Models.Programme

@{
    ViewBag.Title = "Console d'administration";
}

<div id="console-programme" class="container">
    <div class="col-md-6">
        <div class="form-box">

            <h3>Ajouter un programme</h3>
            <hr />

            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <p class="text-danger">@ViewBag.messageError</p>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.EnteteProgramme, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("codeProgramme", null, htmlAttributes: new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.EnteteProgramme, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.annee, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.annee, new { htmlAttributes = new { @class = "form-control small-input", @maxlength = 4 } })
                            @Html.ValidationMessageFor(model => model.annee, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.codeSpecialisation, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.codeSpecialisation, new { htmlAttributes = new { @class = "form-control small-input", @maxlength = 2 } })
                            @Html.ValidationMessageFor(model => model.codeSpecialisation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3">
                            <input type="submit" value="Enregistrer" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        @Html.Action("_PartialList")
    </div>


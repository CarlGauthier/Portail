@{
    ViewBag.Title = "Accueil";
}

<div id="accueil">
    <h1>Bonjour @ViewBag.prenom!</h1>
    <div class="icon-container">    
        
        @if (User.IsInRole("RCP"))
        {
            <a class="icon" href='@Url.Action("Pedagogie")'>
                <span class="glyphicon glyphicon-apple"></span>
                <p>Pédagogie</p>
            </a>
        }

        @if (User.IsInRole("Enseignant")||User.IsInRole("Gestionnaire de stage"))
        {
            <a class="icon">
                <span class="glyphicon glyphicon-briefcase"></span>
                <p>Stage</p>
            </a>
        }

        @if (User.IsInRole("Admin"))
        {
            <a class="icon" href='@Url.Action("ConsoleAdmin")'>
                <span class="glyphicon glyphicon-cog"></span>
                <p>Console d'administration</p>
            </a>
        }
    </div>
</div>
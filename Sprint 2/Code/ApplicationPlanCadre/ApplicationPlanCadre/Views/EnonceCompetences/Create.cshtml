@model ApplicationPlanCadre.Models.EnonceCompetence

@{
    ViewBag.Title = "Create";
}

<h2>Création d'une compétence</h2>

<div id="console-programme" class="container">
    <div class="col-md-6">
        <div class="form-box">

            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.idProgramme)

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.codeCompetence, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.codeCompetence, new { htmlAttributes = new { @class = "form-control small-input", @Value = "" } })
                            @Html.ValidationMessageFor(model => model.codeCompetence, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.enonceCompetence1, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.enonceCompetence1, new { htmlAttributes = new { @class = "form-control small-input", @Value = "" } })
                            @Html.ValidationMessageFor(model => model.enonceCompetence1, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.obligatoire, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.CheckBoxFor(model => model.obligatoire, new { @Checked = "checked"})
                            @Html.ValidationMessageFor(model => model.obligatoire, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.actif, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.CheckBoxFor(model => model.actif)
                            @Html.ValidationMessageFor(model => model.actif, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @*@Html.Partial("_partialCreateContexte")

                    @Html.Partial("_partialContexte", Model.ContexteRealisation)*@
                                        
                    <div class="col-md-offset-3">
                        <input type="submit" value="Enregistrer" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>
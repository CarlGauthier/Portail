@model IEnumerable<ApplicationPlanCadre.Models.PlanCadre>

@{
    ViewBag.Title = "PlanCadre";
}

<div id="super-view">
    @Html.Action("_TreeView")
    <div id="info-display" class="container-fluid">
        <div id="info-detail">
            <h1>Devis ministériels</h1>
            <hr />
            @foreach (var planCadre in Model)
            {
                <a class="info-child clearfix" href='@Url.Action("Info", new { idPlanCadre = planCadre.idPlanCadre })'>
                    <p class="gauche">@Html.DisplayFor(ec => planCadre.titreCours)</p>
                    <p class="droite">@Html.DisplayFor(model => planCadre.Programme.idProgramme)-@Html.DisplayFor(model => planCadre.Programme.annee)-@Html.DisplayFor(model => planCadre.Programme.DevisMinistere.codeSpecialisation)</p>
                </a>
            }
        </div>
    </div>
</div>


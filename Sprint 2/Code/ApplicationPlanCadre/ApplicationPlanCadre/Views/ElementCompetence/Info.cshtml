@model ApplicationPlanCadre.Models.ElementCompetence

@{
    ViewBag.Title = Model.description;
}

<div id="super-view">
    @Html.Action("_TreeView", "DevisMinistere")

    <div id="info-display" class="container-fluid">
        <div id="info-header">
            <h3>Élément de compétence</h3>
            <div>
                <h1>@Html.DisplayFor(model => model.description)</h1>
            </div>
        </div>

        <div id="info-detail">

            @if (Model.CriterePerformance.Count > 0)
            {
                <h2>Critères de performance</h2>

                <ol type="1">
                    @foreach (var criterePerformance in Model.CriterePerformance.OrderBy(ec => ec.numero))
                    {
                        <li>@Html.DisplayFor(cp => criterePerformance.description)</li>
                    }
                </ol>

                <hr />
            }

            <h2>Options</h2>

            <div class="champ">
                <a class="fancy-button" href='@Url.Action("Edit", new { idElement = Model.idElement })'><span class="glyphicon glyphicon-pencil"><!----></span> Modifier</a>
                <a class="fancy-button" onclick="location.href='@Url.Action("Delete", new { idElement = Model.idElement })'"><span class="glyphicon glyphicon-trash"><!----></span> Supprimer l'élément</a>
                <a class="fancy-button rouge" onclick="location.href='@Url.Action("Info", "EnonceCompetence", new { idCompetence = Model.idCompetence })'">Retour</a>
            </div>

        </div>
    </div>
</div>

<script>
    $(("#el" + @Model.idElement + "item")).addClass('active');
    $(("#enc" + @Model.EnonceCompetence.idCompetence)).collapse('show');
    $(("#p" + @Model.EnonceCompetence.DevisMinistere.idDevis)).collapse('show');
</script>
@model ApplicationPlanCadre.Models.EnonceCompetence

@{
    ViewBag.Title = "Order";
}

<div class="container">

    <h1></h1>

    <div class="crud-list">

        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => Model.ElementCompetence.First().numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => Model.ElementCompetence.First().element)
                </th>
                <th class="action-cell-header">
                    <b>Déplacer</b>
                </th>
            </tr>

            @foreach (var elementCompetence in Model.ElementCompetence.OrderBy(ec => ec.numero))
            {
                <tr class="valide">
                    <td>
                        @Html.DisplayFor(el => elementCompetence.numero)
                    </td>
                    <td>
                        @Html.DisplayFor(el => elementCompetence.element)
                    </td>
                    <td class="action-cell">
                        <a href='@Url.Action("MoveUp", "ElementCompetence", new { idElement = elementCompetence.idElement })'>
                            <span class="glyphicon glyphicon glyphicon-arrow-up"><!----></span>
                        </a>
                        <a href='@Url.Action("MoveDown", "ElementCompetence", new { idElement = elementCompetence.idElement })'>
                            <span class="glyphicon glyphicon glyphicon-arrow-down"><!----></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="champ">
        <a href='@Url.Action("Info", "EnonceCompetence", new { idCompetence = Model.idCompetence })' class="fancy-button rouge">Retour</a>
    </div>
</div>


@model ApplicationPlanCadre.Models.ElementCompetence

@{
    ViewBag.Title = "Suppression d'un élément de compétence";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>@ViewBag.Title</h1>

                <h3>@Html.DisplayFor(m => m.description)</h3>

            </header>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <p>Êtes-vous certain de vouloir supprimer cet élément de compétence?</p>

            <hr />

            <input type="submit" value="Confirmer" class="fancy-button" />
            <div class="fancy-button rouge" onclick="location.href='@Url.Action("Info", "ElementCompetence", new { idElement = Model.idElement })'">Annuler</div>

        </div>
    </div>
}

@model IEnumerable<ApplicationPlanCadre.Models.ApplicationUser>

@{
    ViewBag.Title = "Liste des utilisateurs";
}

<div class="container">
    <div class="box">

        <header class="light-header">

            <h1>@ViewBag.Title</h1>

        </header>

        <table class="cool-table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.rolesWrap)
                </th>
                <th class="action-cell-header">
                    <b>Modifier</b>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.prenom) @Html.DisplayFor(modelItem => item.nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.rolesWrap)
                    </td>
                    <td class="action-cell">
                        <a href='@Url.Action("Edit", new { userId = item.Id })'>
                            <span class="glyphicon glyphicon-pencil"><!----></span>
                        </a>
                    </td>
                </tr>
            }
        </table>

        <hr />

        <h2>Options</h2>

        <a href='@Url.Action("Register", "Account")' class="fancy-button"><span class="glyphicon glyphicon-plus"><!----></span> Créer un utilisateur</a>
        <a href='@Url.Action("ConsoleAdmin", "Accueil")' class="fancy-button rouge">Retour</a>

    </div>
</div>

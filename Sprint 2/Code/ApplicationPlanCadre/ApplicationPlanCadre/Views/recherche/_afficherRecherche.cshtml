@using ApplicationPlanCadre.Models
@using ApplicationPlanCadre.Helpers
@model dynamic
@{
    ViewBag.Title = "afficherRech";
}


<div class="container">
    <h2>Votre Recherche</h2>
    @if ((Model.EnonceCompetence.Count == 0) && (Model.ElementCompetence.Count == 0) && (Model.DevisMinistere.Count == 0) && (Model.CriterePerformance.Count == 0) && (Model.ContexteRealisation.Count == 0))
    {
        <p color="red">Aucune information à été trouvée</p>
    }
    else
    {
        if (Model.EnonceCompetence.Count != 0)
        {
            <h2>Énoncer Compétence</h2>
            <table id="table" class="table">
                <tr>
                    
                    <th>Code Compétence</th>
                    <th>Énoncer Compétence</th>
                    
                </tr>
                @foreach (SecondaryEnonceCompetence enonceCmpt in Model.EnonceCompetence)
                {
                    <tr onclick="location.href = '@Url.RouteUrl("Info-enonceCompetence", new { id = enonceCmpt.idCompetence })'">
                        
                        <td>@Html.Raw(enonceCmpt.codeCompetence)</td>
                        <td>@Html.Raw(enonceCmpt.description)</td>
                        
                    </tr>
                }
            </table>
        }
        if (((IDictionary<string, object>)Model).ContainsKey("ElementCompetence"))
        {
            if (Model.ElementCompetence.Count != 0)
            {
                <h2>Élément Compétence</h2>
                <table class="table">
                    <tr>
                        
                        <th>Description</th>
                        
                    </tr>
                    @foreach (SecondaryElementCompetence enonceCmpt in Model.ElementCompetence)
                    {
                        <tr onclick="location.href = '@Url.RouteUrl("Info-enonceCompetence", new { id = enonceCmpt.idElement })'">
                            
                            <td>@Html.Raw(enonceCmpt.description)</td>
                            
                        </tr>

                    }
                </table>

            }
        }


        


        if (Model.DevisMinistere.Count != 0)
        {
            <h2>Devis ministériel</h2>
            <table class="table">
                <tr>
                    
                    <th>annee</th>
                    <th>codeSpecialisation</th>
                    <th>specialisation</th>
                    <th>condition</th>
                    <th>sanction</th>
                    
                </tr>
                @foreach (SecondaryDevisMinistere devis in Model.DevisMinistere)
                {
                    <tr @*onclick="location.href = '@Url.RouteUrl("Info-programme", new { id = devis.idDevis })'"*@>
                        
                        
                        <td>@Html.Raw(devis.annee)</td>
                        <td>@Html.Raw(devis.codeSpecialisation)</td>
                        <td>@Html.Raw(devis.specialisation)</td>
                        <td>@Html.Raw(devis.condition)</td>
                        <td>@Html.Raw(devis.sanction)</td>
                        
                    </tr>
                }
            </table>
        }
        if (((IDictionary<string, object>)Model).ContainsKey("CriterePerformance"))
        {
            if (Model.CriterePerformance.Count != 0)
            {
                <h2>Critères de performances</h2>
                <table class="table">
                    <tr>
                        
                        <th>criterePerformance</th>
                        
                    </tr>
                    @foreach (SecondaryCriterePerformance enonceCmpt in Model.CriterePerformance)
                    {
                        <tr @*onclick="location.href = '@Url.RouteUrl("", new { id = })'"*@>
                            
                            <td>@Html.Raw(enonceCmpt.description)</td>
                            
                        </tr>
                    }
                </table>
            }
        }
        if (((IDictionary<string, object>)Model).ContainsKey("ContexteRealisation"))
        {
            if (Model.ContexteRealisation.Count != 0)
            {
                <h2>Contexte de réalisation</h2>
                <table class="table">
                    <tr>
                        
                        <th>Contexte de Réalisation</th>
                        
                    </tr>
                    @foreach (SecondaryContexteRealisation enonceCmpt in Model.ContexteRealisation)
                    {
                        <tr @*onclick="location.href = '@Url.RouteUrl("", new { id = })'"*@>
                            

                            <td>@Html.Raw(enonceCmpt.description)</td>
                            
                        </tr>
                    }
                </table>
            }
        }
 }

</div>





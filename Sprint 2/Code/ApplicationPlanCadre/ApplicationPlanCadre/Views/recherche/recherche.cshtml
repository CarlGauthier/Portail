@{
    ViewBag.Title = "Recherche dans les devis";
}
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

@using (Ajax.BeginForm("Rechercher", "recherche", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "resultArea" }, new { defaultbutton = "searchBtn" }))
{
    <div class="container">
        <div class="form-box">
            <div id="searchForm">

                <input type="text" class="form-control" placeholder="Search" id="Stxt" name="searchStr">
                <button type="submit" id="searchBtn"><span class="glyphicon glyphicon-search"></span></button>

                <div>
                    @Html.CheckBox("chkRecherche")
                    Limiter la recherche au devis et compétences
                </div>

            </div>
        </div>
    </div>
};

<script type="text/javascript">
    $(document).bind('keydown', function (e) {
        if (e.which === 13) { // return
            $('#searchBtn').trigger('click');
        }
    });
</script>

<div id="resultArea">

</div>

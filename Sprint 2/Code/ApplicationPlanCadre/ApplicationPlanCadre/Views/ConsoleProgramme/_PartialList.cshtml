@model IEnumerable<ApplicationPlanCadre.Models.Programme>

<div class="crud-list">
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnteteProgramme.codeProgramme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.annee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.specialisation)
            </th>
            <th class="action-cell-header">
                <b>Modifier</b>
            </th>
            <th class="action-cell-header">
                <b>Supprimer</b>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            bool valide = item.EnonceCompetence.Count == 0;
            string dblclickEvent = valide ? Url.Action("Edit", new { id = item.idProgramme }) : @Url.Action("Create");
            string cssClass = valide ? "valide" : "";
            <tr ondblclick="location.href='@dblclickEvent'" class="@cssClass">
                <td>
                    @Html.DisplayFor(modelItem => item.EnteteProgramme.codeProgramme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.annee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.codeSpecialisation)
                </td>
                <td class="action-cell">
                    @if (valide)
                    {
                        <button onclick="location.href='@Url.RouteUrl("edit-programme", new { id = item.idProgramme })'">
                            <span class="glyphicon glyphicon-pencil"><!----></span>
                        </button>
                    }
                </td>
                <td class="action-cell">
                    @if(valide)
                    {
                        <button onclick="location.href='@Url.Action("DeleteConfirmed", new { id = item.idProgramme })'">
                            <span class="glyphicon glyphicon-trash"><!----></span>
                        </button>
                    }
                </td>
            </tr>
        }
    </table>
</div>

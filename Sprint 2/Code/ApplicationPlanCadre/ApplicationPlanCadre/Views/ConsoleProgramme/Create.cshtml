@model ApplicationPlanCadre.Models.Programme

@{
    ViewBag.Title = "Gestion des programmes";
}

@using (Html.BeginForm("Create", "ConsoleProgramme", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>@ViewBag.Title</h1>

            </header>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="field-box">
                <div class="row">
                    <div class="col-md-8">

                        <div class="form-group">
                            @Html.LabelFor(model => model.idDevis)
                            @Html.DropDownList("idDevis", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idDevis, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.nom)
                            @Html.TextBoxFor(model => model.nom, new { @class = "form-control", @maxlength = 50 })
                            @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.annee)
                            @Html.TextBoxFor(model => model.annee, new { @class = "form-control small", @maxlength = 4, @onkeydown = "return (!(event.keyCode>=65) && event.keyCode!=32);" })
                            @Html.ValidationMessageFor(model => model.annee, "", new { @class = "text-danger" })
                        </div>

                        <input type="submit" value="Enregistrer" class="fancy-button" />

                    </div>
                </div>
            </div>

            @Html.Action("_PartialList")

        </div>
    </div>
}

@model ApplicationPlanCadre.Models.Programme

@{
    ViewBag.Title = "Console d'administration";
}

<div class="container">

    <div class="horizontal-form">

        @using (Html.BeginForm("Create", "ConsoleProgramme", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal form-box">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h3>Ajouter un programme</h3>
                <hr />

                <div class="form-group">
                    @Html.LabelFor(model => model.idDevis, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.DropDownList("idDevis", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.idDevis, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.nom, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control col-md-6", @maxlength = 50 } })
                        @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.annee, htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.annee, new { htmlAttributes = new { @class = "form-control small-input", @maxlength = 4, @onkeydown = "return (!(event.keyCode>=65) && event.keyCode!=32);" } })
                        @Html.ValidationMessageFor(model => model.annee, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" value="Enregistrer" class="fancy-button" />
                    </div>
                </div>
            </div>
        }

    </div>

    @Html.Action("_PartialList")
</div>
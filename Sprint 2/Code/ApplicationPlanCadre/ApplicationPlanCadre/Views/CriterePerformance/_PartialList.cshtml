@model IEnumerable<ApplicationPlanCadre.Models.CriterePerformance>

<div class="crud-list">

    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.criterePerformance1)
            </th>
            <th class="action-cell-header">
                <b>Modifier</b>
            </th>
            <th class="action-cell-header">
                <b>Supprimer</b>
            </th>
            <th class="action-cell-header">
                <b>Déplacer</b>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            string dblclickEvent = Url.Action("Edit", new { idCritere = item.idCritere });
            <tr ondblclick="location.href='@dblclickEvent'">
                <td>
                    @Html.DisplayFor(modelItem => item.numero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.criterePerformance1)
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Edit", new { idCritere = item.idCritere })'>
                        <span class="glyphicon glyphicon-pencil"><!----></span>
                    </a>
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("Delete", new { idCritere = item.idCritere })'>
                        <span class="glyphicon glyphicon-trash"><!----></span>
                    </a>
                </td>
                <td class="action-cell">
                    <a href='@Url.Action("MoveUp", new { idCritere = item.idCritere })'>
                        <span class="glyphicon glyphicon glyphicon-arrow-up"><!----></span>
                    </a>
                    <a href='@Url.Action("MoveDown", new { idCritere = item.idCritere })'>
                        <span class="glyphicon glyphicon glyphicon-arrow-down"><!----></span>
                    </a>
                </td>
            </tr>
        }
    </table>
</div>
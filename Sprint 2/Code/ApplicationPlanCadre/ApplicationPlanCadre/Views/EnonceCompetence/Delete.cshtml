@model ApplicationPlanCadre.Models.EnonceCompetence

@{
    ViewBag.Title = "Delete";
}

<div class="container">

    @using (Html.BeginForm("DeleteConfirmed"))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.idCompetence)

        <div class="form-horizontal single-action">

            <h1>Supprimer un énoncé de compétence</h1>
            <h3>@Model.description</h3>

            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-md-12">
                <p>Si vous supprimez cette compétence, vous supprimez aussi les éléments de compétence suivants.</p>
                @foreach (var elementCompetence in Model.ElementCompetence)
                {
                    <a class="info-child clearfix" href='@Url.Action("Info", "ElementCompetence", new { idElement = elementCompetence.idElement })'>
                        <p>@Html.DisplayFor(ec => elementCompetence.description)</p>
                    </a>
                }
            </div>

            <div class="col-md-12">
                <p>Êtes-vous certain de vouloir supprimer cet énoncé de compétence?</p>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <a class="fancy-button" href='@Url.Action("DeleteConfirmed", new { idCompetence = Model.idCompetence })'>Confirmer</a>
                    <div class="fancy-button rouge" onclick="location.href='@Url.Action("Info", "DevisMinistere", new { idDevis = Model.idDevis })'">Annuler</div>
                </div>
            </div>
        </div>

    }

</div>


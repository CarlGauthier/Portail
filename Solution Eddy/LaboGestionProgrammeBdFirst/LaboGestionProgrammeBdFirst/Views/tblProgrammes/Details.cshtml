        <!--@Html.ActionLink("Consulter", "ViewPdf", "tblProgrammes")-->

    </div>
    <div class="col-md-6">
        
        <label>Durée totale : </label>@Html.ViewData["total"]<br><br>
        <label>Formation générale : </label>
        @Html.DisplayFor(model => model.nbHeurefrmGenerale)
        <br><br>
        <label>Formation spécifique : </label>
        @Html.DisplayFor(model => model.nbHeurefrmSpecifique)
        <br><br>
       
    </div>

</div>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
        <input type="button" class="btn btn-info" value="Modifier" onclick="location.href='@Url.Action("Edit", "tblProgrammes", new { id = Model.idCodeProgramme })'" />

        <!-- Exemple de lien fonctionnel
        <div class="edit">@Html.ActionLink("Modifier", "Edit", new { id = Model.code })</div>
        -->

    </div>
</div>
    


<div class="row">
    <div class="competences">
        <h1>Zone compétence</h1>

    </div>


</div>

<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">

    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-info" value="Enregistrer" onclick="location.href='@Url.Action("Index", "tblProgrammes")'" />
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-danger" value="Valider" onclick="location.href='@Url.Action("Index", "tblProgrammes")'" />
    </div>
</div>


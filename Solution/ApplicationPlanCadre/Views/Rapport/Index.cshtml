@model dynamic
@using ApplicationPlanCadre.Models

@{
    ViewBag.Title = "Rapport";
}
<style>
    .btn{
       float:left;
       margin-left:2px;
    }
    .form-horizontal .mr-0 {
        margin-right: 0 !important;
        padding-right:0px !important;
    }
    .form-control {
        margin-right: 0 !important;
    }
    p{
        font-size:16px;
    }
</style>


<div id="super-view">
    @*@Html.Action("_TreeView")*@
    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>Rapport</h1>

            </header>
            
            <h3>Plan Cadre</h3>
            <hr />
            @foreach (PlanCadre planCadre in Model.PlanCadre)
            {
                <a class="info-child clearfix" target="_blank" href='@Url.Action("RapportPlanCadre", "Rapport",new { id = planCadre.idPlanCadre})'>
                    <p class="gauche">@Html.DisplayFor(x => planCadre.titreCours)</p>
                    <p class="droite">@Html.DisplayFor(x => planCadre.numeroCours)</p>
                </a>
            }
            <h3>Programme</h3>
            <hr />
            @foreach (Programme prog in Model.Programme)
            {
                <a class="info-child clearfix" target="_blank" href='@Url.Action("RapportProgramme", "Rapport",new { id = prog.idProgramme })'>
                    <p class="gauche">@Html.DisplayFor(x => prog.nom)</p>
                    <p class="droite"></p>
                </a>
            }
        </div>
    </div>
</div>

        



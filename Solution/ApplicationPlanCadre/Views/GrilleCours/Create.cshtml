@model ApplicationPlanCadre.Models.GrilleCours

@{
    ViewBag.Title = "Création d'une grille de cours";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-box">

            <header class="light-header">

                <h1>@ViewBag.Title</h1>

            </header>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="col-md-4">

                    <div class="form-group">
                        @Html.LabelFor(model => model.nom)
                        @Html.TextBoxFor(model => model.nom, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

            <input type="submit" value="Create" class="fancy-button" />
            <a class="fancy-button rouge" onclick="location.href='@Url.Action("Index")'">Retour</a>

        </div>
    </div>
}
